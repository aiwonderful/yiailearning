# 飞书同步配置
# 复制为 .env.local 并填写实际值

# ==============================================
# 飞书应用配置
# ==============================================
# 飞书应用ID
FEISHU_APP_ID=cli_a9827c3712b8901c

# 飞书应用密钥
FEISHU_APP_SECRET=zh0LSAyjOyTUXUxt2gCBbfMqiVG4YTJb

# 飞书文件夹ID（从文件夹地址栏直接复制）
# 两种格式都支持：
# 格式1：fl + 16-20位字母数字，如：flS9c8dE1f2G3h4I5j6k7l8m9n0o1p
# 格式2：长ID，如：Na21fx6UGlfDepddLP8cIO7rnMe
# 获取方式：打开文件夹 → 从地址栏直接复制最后一段ID
# 示例：https://xxx.feishu.cn/drive/folder/这里就是ID
FEISHU_FOLDER_ID=Na21fx6UGlfDepddLP8cIO7rnMe

# 文档ID列表（可选，使用文件夹时可不填）
# 格式：doc_id_1,doc_id_2,doc_id_3
FEISHU_DOC_IDS=

# ==============================================
# RSS同步配置
# ==============================================
# 飞书知识库RSS地址
FEISHU_RSS_URL=https://your-feishu-knowledge-base.com/rss

# 每次同步的文章数量限制
FEISHU_SYNC_LIMIT=10

# ==============================================
# 自动化配置
# ==============================================
# 是否启用自动同步
FEISHU_AUTO_SYNC=true

# 同步间隔（小时）
FEISHU_SYNC_INTERVAL=6

# 同步后是否自动构建
FEISHU_AUTO_BUILD=true

# ==============================================
# 通知配置
# ==============================================
# 同步成功/失败的webhook通知（可选）
FEISHU_WEBHOOK_URL=

# 是否发送邮件通知
FEISHU_EMAIL_NOTIFY=false
FEISHU_EMAIL_TO=your@email.com